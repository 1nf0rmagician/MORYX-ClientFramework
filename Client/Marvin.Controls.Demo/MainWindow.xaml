                                        <ProgressItem Value="120"
                                                      Brush="{StaticResource PhoenixContactGreenBrush}"
                                                      TextColor="DarkGreen"
                                                      KeepGlowEffect="False"
                                                      Text="S0"/>
                                        <ProgressItem Value="200"
                                                      Brush="Red"
                                                      TextColor="White"
                                                      KeepGlowEffect="False" 
                                                      Text="S1"/>
                                        <ProgressItem Value="320"
                                                      Brush="Yellow"
                                                      TextColor="GreenYellow"
                                                      Text="S2"
